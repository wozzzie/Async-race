{
  "plugins": ["prettier", "import", "@typescript-eslint"],
  "extends": [
    "prettier",
    "airbnb-typescript/base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "no-explicit-any": 1,
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": ["off"]
  }
}
